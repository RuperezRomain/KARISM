    <meta name="viewport" content="width=device-width, user-scalable=no">

{% endblock %}

{% block title %}
    {{parent()}}
    - Edition Profil
{% endblock %}

{% block body %}

    <form id="editProfil" class="col-lg-6 profil">
        <p>Nom</p><input type="text" id="firstname" name="caca" class="col-lg-6"/>
        <p>Prénom</p><input id="lastname" class="col-lg-6"/>
        <p>Pseudo</p><input id="username" class="col-lg-6" placeholder="adresse"/>
        <p>Téléphone</p><input id="phone" class="col-lg-6"/>
        <p>Biographie</p><input id="bio" class="col-lg-6"/>
        <p>Adresse</p><input id="adress" class="col-lg-6"/>
{#        <p>Date de naissance</p><input type="date" id="date" class="col-lg-6"/>#}
        <select id="genre">
            <option value="">Sexe</option>
            <option value="Homme">Homme</option>
            <option value="Femme">Femme</option></select>
{#        <input type="file" id="user_profilPicture" name="user[profilPicture]" class="col-lg-6"/>#}
        <img id="previewPicture" src="" alt="your image" width="350px" class="col-lg-6"/>

        <div class="col-lg-9">
            <input id="validEditProfil" type="submit" value="Editer" class="col-lg-6"/>
        </div>
    </form>

{% endblock %}
{% block javascripts %}  
    {{ parent() }}
    <script src="{{ asset('script/js/editProfil.js') }}"></script>
    <script src="{{ asset('script/js/previewImage.js')}}"></script>
{% endblock %}