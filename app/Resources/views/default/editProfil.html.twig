{% extends "admin/adminTemplate.html.twig" %}



{% block title %}
    {{parent()}}
    - Edition Profil
{% endblock %}

{% block body %}

    <div class="container-fluid " >
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <p><a class="text-warning" href="/profil/{{app.user.id}}">Mon Profil</a> > Edition du profil</p>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <div class="container">
                        <div class="row">
                            <div class=" text-center loginscreen animated fadeInDown">
                                <div>
                                    <h4 class="logo-name"><span class="loading dots3"></span></h4>
                                </div>
                                <h3>Bienvenue chez KARISM </h3>

                                <div class="col-md-6">
                                    <p>Inscription</p>
                                    {{ form_start(userType,{ 'attr': {'class': 'form-horizontal'}})}}
                                    {{ form_widget(userType.username, { 'attr': {'class': 'form-control','placeholder':'Votre Pseudo '}})}}
                                    {{ form_widget(userType.email, { 'attr': {'class': 'form-control','placeholder':'Votre email '}})}}
                                    {{ form_widget(userType.password.first, { 'attr': {'class': ' hidden form-control','placeholder':'Votre mots de passe '}})}}
                                    {{ form_widget(userType.password.second, { 'attr': {'class': ' hidden form-control','placeholder':'Confirmation mots de passe '}})}}
                                    {{ form_widget(userType.genre, { 'attr': {'class': 'form-control'}})}}
                                    {{ form_widget(userType.firstname, { 'attr': {'class': 'form-control','placeholder':'Votre Prenom '}})}}
                                    {{ form_widget(userType.lastname, { 'attr': {'class': 'form-control','placeholder':'Votre Nom '}})}}
                                    {{ form_widget(userType.phone, { 'attr': {'class': 'form-control','placeholder':'Votre N°Tel '}})}}
                                    {{ form_widget(userType.bio, { 'attr': {'class': 'form-control','placeholder':'Description'}})}}
                                    {{ form_widget(userType.fk_city, { 'attr': {'class': 'form-control','placeholder':'Votre ville'}})}}
                                    {{ form_widget(userType.adress, { 'attr': {'class': 'form-control','placeholder':'Votre Adresse '}})}}
                                    {{ form_widget(userType.profilPicture, { 'attr': {'class': 'form-control'}})}}
                                </div>
                                <h4 class="headerStyle">Style de Préféré</h4>
                                <div class="listStyle">
                                    {{ form_widget(userType.style, { 'attr': {'class': 'placeholder ','placeholder':'Style'}})}}
                                </div>
                                {{ form_widget(userType.profilPicture, { 'attr': {'class': ' hidden btn btn-default btn-file'}})}}
                                <img id="previewPicture" src="#" alt="your image" width="350px" />
                            </div>
                            <button id="validRegister" type="submit" class="btn btn-primary">S'enregistrer</button>
                            {{ form_end(userType) }}                    
                        </div>
                    </div>
                </div>
                <div class="col-sm-6"><h4>Envie de rejoindre notre cercle d'hôtes ?</h4>
                    <p>blabla</p>
                </div>
            </div>
        </div>
    </div>
</div>
</div>

{% endblock %}
{% block javascripts %}  
    {{ parent() }}
    <script src="{{ asset('script/js/editProfil.js') }}"></script>
    <script src="{{ asset('script/js/previewImage.js')}}"></script>
{% endblock %}
