{% extends "admin/adminTemplate.html.twig" %}

{% block stylesheets %}
    {{parent()}}
    <meta name="viewport" content="width=device-width, user-scalable=no">

{% endblock %}

{% block body %}
   
    <div class="container-fluid " >
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>Basic form <small>Simple login form example</small></h5>
                <div class="ibox-tools">
                    <a class="collapse-link">
                        <i class="fa fa-chevron-up"></i>
                    </a>
                   
                </div>
            </div>
            <div class="ibox-content">
                <div class="row">
                    <div class="col-sm-6 b-r"><h3 class="m-t-none m-b">Sign in</h3>
                        <p>Sign in today for more expirience.</p>
                        {{form_start(formPicture,{ 'attr': {'class': 'form-horizontal'}})}}
                        {{ form_widget(formPicture.nom, { 'attr': {'class': 'form-control','placeholder':'Votre nom '}})}}
                        {{ form_widget(formPicture.style, { 'attr': {'class': 'form-control'} })}}
                        {{ form_widget(formPicture.techniques, { 'attr': {'class': 'form-control'} })}}
                        {{ form_widget(formPicture.genres, { 'attr': {'class': 'form-control'} })}}
                        {{ form_widget(formPicture.size, { 'attr': {'class': 'form-control'} })}}
                        {{ form_widget(formPicture.prix, { 'attr': {'class': 'form-control'} })}}
                        {{ form_widget(formPicture.expos, { 'attr': {'class': 'form-control'} })}}
                        {{ form_widget(formPicture.commentaire, { 'attr': {'class': 'form-control','placeholder':'Commentaire'} })}}
                        {{ form_widget(formPicture.img, { 'attr': {'class': 'btn btn-default btn-file'}})}}
                        <button class="validPicture" >Validation Picture </button>
                        <div>
                            <a href="{{path('accueilTest')}}" id="exitSerie"><button type="button">Valider Serie</button></a>
                        </div>
                        {{form_end(formPicture)}}   
