{% extends "admin/adminTemplate.html.twig" %}
{% block title %}
    {{parent()}}
    - Lieu
{% endblock %}

{% block body %}


    <div class="container">
        <div class=" row ibox-content">
            <div class="ibox-title">

                <form action="{{ path('valideNomLieux')}}" method="post">
                    <h2><p>Saisissez un nom pour crée un nouveau lieu</p>
                        <p>Ou saisissez le nom d'un lieu existant pour l'éditer</p></h2> <br>
                    <input type="text" name="nomSerie"  placeholder="Nom du lieux">
                    <input value="Créer / Éditer" type="submit" class="btn btn-success">
                </form>

                <td><hr class="hr-line-solid"></td>
            </div>
            {% for place in places %}


                <div class="text-center col-sm-6 col-md-2">
                    <div class="thumbnail">
                        <a href="/hote/get/lieu/{{place.id}}">
                            <p> 
                                {{place.name}}
                            </p>
                        </a>
                        <div id="{{place.id}}">
                            <img class="img-thumbnail" src="/web/images/placePictures/{{place.img}}">
                            <button class=" removePlace btn btn-outline btn-warning btn-block faa-parent animated-hover"><i class="fa fa-trash faa-wrench" aria-hidden="true"></i></button>
                        </div>
                    </div>

                </div>


            {% endfor %}
        </div>
    </div>

{% endblock %}
{% block javascripts %}
    {{parent()}}
    <script src="{{asset('/script/js/gestionPlaceSerie.js')}}"></script>
{% endblock %}
