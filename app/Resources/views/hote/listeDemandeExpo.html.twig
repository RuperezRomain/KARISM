{% extends "admin/adminTemplate.html.twig" %}



{% block body %}
    <div class="container-fluid">
        <h1 class="">Mes expos</h1>
        {% for expo in expos %}
           

            <div class="col-lg-12">


                <div class="ibox float-e-margins">

                    <div class="ibox-title">
                        <a href="{{path('selcetionExpo',{'id': expo.id}) }}">
                            <i class="fa fa-pencil-square-o fa-3" aria-hidden="true">Voir +</i>
                        </a>
                        <div class="ibox-tools">
                            <a class="collapse-link">
                                <i class="fa fa-chevron-up"></i>
                            </a>


                        </div>
                    </div>
                    <div class="ibox-content">
 {% if expo.messageHote != null%}
                        <div class="container">
                            <div class="col-lg-6">
                                <div class="middle-box">
                                    {{expo.messageHote}}
                                </div>
                            </div>
                            <div class="col-lg-6">

                                <a><div  class="col-sm-2 widget red-bg reponseBlock">Refuser</div></a>

                                <a href="{{path('hoteValide',{'id':expo.id})}}"><div  class="col-sm-offset-1 col-sm-2 col-sm-offset-1 widget navy-bg reponseBlock">Accepter</div></a>


                            </div>


                        </div>
                                
                                {% else %}
                                
                      <div class="container">


                            <div class="col-lg-4">
                                <h2>Rappel des informations</h2>
                                <div> Date: {{expo.date|date("j F à g:i")}}</div>
                                <div> Ville: {{expo.fkville }}</div>
                                <div>Description: {{expo.description }}</div>


                            </div>
                            <div class="col-lg-3">
                                <h2>
                                    Apropo de l'hote<br>
                                </h2>
                                {% if expo.fk_place != null %}
                                    {% if expo.messageHote != null %}
                                        <div>En atente de validation de l'hote:|</div>
                                        <img class=" img-thumbnail " src="/web/images/placePictures/{{expo.fk_place.img}}" >     
                                        <div>{{expo.fk_place.name}}</div>
                                    {% else %}
                                        <div>L'hote a validée la demande ! :)</div>
                                        <img class=" img-thumbnail " src="/web/images/placePictures/{{expo.fk_place.img}}" >     
                                        <div>{{expo.fk_place.name}}</div>
                                    {% endif %}
                                {% else %}
                                    <div> Il n'y a pas demande d'hote ou la dernier demande a etait refuser :(</div>
                                {% endif %}

                            </div>
                            <div class="col-lg-5">
                                <h2>
                                    Mes series <br>
                                </h2>
                                <div class="container">
                                    {% if expo.fkserie != null %}
                                        {% for serieExpo in expo.fkserie %}
                                            <img class=" img-thumbnail " src="/web/images/oeuvrePictures/{{serieExpo.img}}"> 
                                        {% endfor %}
                                    {% endif %} 

                                </div>
                            </div>
                        </div>
                                    
                                 {% endif %}
                    </div>
                    <div class="ibox-footer">
                        <span class="pull-right">
                            The righ side of the footer
                        </span>
                        This is simple footer example
                    </div>
                </div>
            </div>
       
        {% endfor %}


        </div>
        {% endblock%}